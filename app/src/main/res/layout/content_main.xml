<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


	<TextView
		android:id="@+id/stopIdLabel"
		style="@style/Label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/stop_id"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/stopIdEntry"
		style="@style/Text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="@string/stop_id_hint"
		android:inputType="number"
		android:minHeight="@android:dimen/app_icon_size"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/stopIdLabel" />

	<TextView
	    android:id="@+id/favoritesTextView"
	    style="@android:style/TextAppearance.Large"
	    android:text="@string/favorites"
	    android:paddingLeft="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:layout_constraintLeft_toLeftOf="parent"
	    app:layout_constraintTop_toBottomOf="@+id/stopIdEntry" />

	<android.support.v7.widget.RecyclerView
	    	android:id="@+id/favoritesRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/favoritesTextView"
		android:contentDescription="@string/favorite_stop_ids_content_description" />
</android.support.constraint.ConstraintLayout>
